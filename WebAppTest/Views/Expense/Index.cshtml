@model IEnumerable<WebAppTest.Models.Expense>

<div class="=" container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Despesas</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Expense" asp-action="Create" class="btn btn-primary">Criar Nova Despesa</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Despesa
                    </th>
                    <th>
                        Valor
                    </th>
                    <th>
                        Modificações
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Expense in Model)
                {
                    <tr>
                        <td width="35%">@Expense.ExpenseName</td>
                        <td width="35%">@Expense.Amount</td>
                        <td width="30%">
                            <div class="w-100 btn-group" role="group">
                            <a asp-controller="Expense" asp-action="Update" asp-route-Id="@Expense.Id" class="btn btn-primary mx-1">Modificar</a>
                            <a asp-controller="Expense" asp-action="Delete" asp-route-Id="@Expense.Id" class="btn btn-danger mx-1">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Nenhuma Despesa Ainda</p>
    }

</div>